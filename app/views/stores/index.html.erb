<div class= "top-hero-wrapper text-center">
    <div class= "container top-hero-container">
        <div class= "row">
            <div class="stores-container">
                <table class="stores-index">
                    <thead>
                        <tr>
                            <th>SCORE</th>
                            <td>AREA</td>
                            <td>STORE</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% @stores.each do |store| %>
                        <tr>
                            <th><%= store.skillAverage %></th>
                            <td><%= store.area.name %></td>
                            <td><%= link_to store.name, store_path(store) %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>    
    </div>
</div>