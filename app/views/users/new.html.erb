<div class="users-new-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-4 users-new-container">
                <h1 class="text-center text-black">sing up</h1>
                <%= form_for @user do |f| %>
                <div class= "form-group">
                    <%= f.label :id, class: 'text-black' %>
                    <%= f.text_field :id, class: 'form-control' %>
                </div>
                <div class= "form-group">
                    <%= f.label :password class: 'text-black' %>
                    <%= f.text_field :password class: 'form-control' %> 
                </div>
                <%= f.submit "登録", class: 'btn-block btn-black' %>
                <% end %>
                <%= link_to 'ログイン', "#", class: 'text-black' %>
            </div>
        </div>
    </div>
</div>
