<div class="users-new-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-4 users-new-container">
                <h1 class="text-center text-black">New User</h1>
                <%= form_for @user do |f| %>
                <div class= "form-group">
                    <%= f.label :number, class: 'text-black' %>
                    <%= f.text_field :number, class: 'form-control' %>
                </div>
                <div class= "form-group">
                    <%= f.label :password, class: 'text-black' %>
                    <input type="password"<%= f.text_field :password, class: 'form-control' %>
                </div>
                <div class= "form-group">
                    <%= f.label :name, class: 'text-black' %>
                    <%= f.text_field :name, class: 'form-control' %>
                </div>
                <div class= "form-group">
                    <%= f.label '役職' %>
                    <%= f.collection_select :role_id, Role.all, :id, :name, :prompt => "選択して下さい" %>
                </div>
                <div class= "form-group">
                    <%= f.label 'エリア' %>
                    <%= f.collection_select :area_id, Area.all, :id, :name, :prompt => "選択して下さい" %>
                </div>
                <div class= "form-group">
                <%= f.label '店舗名' %>
                <%= f.collection_select :store_id,Store.all, :id, :name, :prompt => "選択して下さい" %>
                </div> 
                <%#= render 'store', { store: @store } %>
                <%= f.submit "登録", class: 'btn-block btn-black' %>
                <% end %>
                <%= link_to login_path do %>
                <button type="button" class="btn btn-info btn-info">ログイン</button>
                <% end %>
            </div>
        </div>
    </div>
</div>
